/*
#include <stdio.h>

int main() {
    double matrix[3] [3]; 
    int i, j; 
    double mainDiagSum = , sideDiagSum = 0;
//Ввод значений для матрицы 
printf("Введите значения для матрицы 3х3:\n"); 
for (i=0; i<3; i++) {
    for(j=0; j<3; i++) {
        scanf("%lf", &matrix[i] [i]);

    }
}
        
//Вычисление суммы элементов на главной и побочной диагоналях
for (i=0; i<3; i++) {
mainDiagSum += matrix[i] [i]; 
sideDiagSum += matrix[i] [2-i]; 
}

//Вывод суммы элементов на диагоналях 
printf("Сумма элементов на главной диагонали: %lf\n", mainDiagSum); 
printf("Сумма элементов на побочной диагонали: %lf\n", sideDiagSum); 
int squareMatrix[2] [2]; 
//Ввод значений для квадратной матрицы 2х2
printf("\nВведите значение для матрицы 2х2:\n");
for (i=0; i<2; i++) {
     for (j=0; j<2; j++) {
          scanf("%d", &squareMatrix[i][j]); 
     }
}
//Вывод квадрата данной матрицы
printf("Квадрат данной матрицы:\n"); 
for (i=0; i<2; i++) {
     for (j=0; j<2; j++) {
          printf("%d", squareMatrix[i] [j] * squareMatrix[i] [j]); 
           }
           printf("\n");
  }
  return 0;
}
